// Data atual  : 13/04/2023
Var
   // Seção de Declarações das variáveis
   nota, i, p : inteiro
Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...

   para nota de 1 ate 5 faca

      escreval(" digite uma nota: ")
      leia(nota)
      
   // MOD = "%"
      se nota % 2 = 0 entao
         i <- i - 1
         senao
         p <- p + 1
      fimse
   fimpara
   escreval("A quantidade de número impares foi de: ",i)
   escreval("A quantidade de número pares foi de: ", p)

Fimalgoritmo
